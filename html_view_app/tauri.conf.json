{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "html_view_app",
  "version": "0.1.0",
  "identifier": "com.html-view.app",
  "bundle": {},
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "HTML Viewer",
        "width": 1024,
        "height": 768,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'"
    }
  }
}